{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Gulp (Api)",
      "cwd": "${workspaceFolder}/SimpleSocialNetwork.Api",
      "program": "${workspaceFolder}/SimpleSocialNetwork.Api/node_modules/gulp/bin/gulp.js",
      "args": ["default"],                   // <-- поставь имя своего таска: "copy-npm", "copy-js", ...
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "autoAttachChildProcesses": true
    },
    {
      "name": "ASP.NET Core (run)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "pre:server",
      "program": "dotnet",
      "args": [
        "run",
        "--project",
        "SimpleSocialNetwork.Api/SimpleSocialNetwork.Api.csproj"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "stopAtEntry": false,
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DOTNET_ENVIRONMENT": "Development"
      },
      "serverReadyAction": {
        "pattern": "Now listening on:\\s+(https?://\\S+)",
        "uriFormat": "%s",
        "action": "openExternally"
      }
    }
  ]
}